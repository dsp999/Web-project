<?xml version="1.0" encoding="utf-8"?>
<config>
  		
	<fieldset
		name="basic_settings"
		label="COM_MINITEKWALL_CONFIG_BASIC_SETTINGS_LABEL"
		description="COM_MINITEKWALL_CONFIG_BASIC_SETTINGS_DESC"
	>
	
		<field
			name="load_fontawesome"
			type="radio"
			class="btn-group"
			label="COM_MINITEKWALL_CONFIG_LOAD_FONT_AWESOME_LABEL"
			description="COM_MINITEKWALL_CONFIG_LOAD_FONT_AWESOME_DESC"
			default="1"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
		<field
			name="load_fancybox"
			type="radio"
			class="btn-group"
			label="COM_MINITEKWALL_CONFIG_LOAD_FANCYBOX_LABEL"
			description="COM_MINITEKWALL_CONFIG_LOAD_FANCYBOX_DESC"
			default="1"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		
	</fieldset>
	
	<fieldset
    	name="permissions"
    	label="JCONFIG_PERMISSIONS_LABEL"
    	description="JCONFIG_PERMISSIONS_DESC"
  	>
    	
		<field
      		name="rules"
      		type="rules"
      		label="JCONFIG_PERMISSIONS_LABEL"
      		class="inputbox"
      		validate="rules"
      		filter="rules"
      		component="com_minitekwall"
      		section="component"
     	/>
		
	</fieldset>
	
</config>